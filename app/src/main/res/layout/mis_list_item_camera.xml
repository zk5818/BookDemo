<?xml version="1.0" encoding="utf-8"?>
<com.kery.bookdemo.img.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343535">

    <ImageView
        android:layout_marginTop="-20dp"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/mis_asy" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="@string/mis_tip_take_photo"
        android:textColor="#CDCECE"
        android:textSize="14sp" />

</com.kery.bookdemo.img.SquareFrameLayout>